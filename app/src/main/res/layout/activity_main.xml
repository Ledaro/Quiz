<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/startImageView"
        android:layout_width="386dp"
        android:layout_height="705dp"
        android:layout_marginStart="2dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/startbackround"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/gameImageView"
        android:layout_width="370dp"
        android:layout_height="710dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gamebackground"
        tools:visibility="visible" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="380dp"
        android:onClick="startGame"
        android:text="Zagraj!"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/losujklub"
        android:layout_width="218dp"
        android:layout_height="53dp"
        android:text="Losuj klub!"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/clubLogosImg"
        android:layout_width="229dp"
        android:layout_height="388dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.116"
        tools:srcCompat="@drawable/psg"
        tools:visibility="visible" />

    <androidx.gridlayout.widget.GridLayout

        android:id="@+id/answersLayout"
        android:layout_width="368dp"
        android:layout_height="146dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/button0"
            android:layout_width="188dp"
            android:layout_height="70dp"
            android:onClick="chooseAnswer"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="0"
            android:tag="0"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="187dp"
            android:layout_height="70dp"
            android:onClick="chooseAnswer"
            android:textSize="18sp"
            app:layout_column="1"
            app:layout_row="0"
            android:tag="1"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="187dp"
            android:layout_height="70dp"
            android:onClick="chooseAnswer"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="1"
            android:tag="2"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="187dp"
            android:layout_height="70dp"
            android:onClick="chooseAnswer"
            android:textSize="18sp"
            app:layout_column="1"
            app:layout_row="1"
            android:tag="3"/>

    </androidx.gridlayout.widget.GridLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>